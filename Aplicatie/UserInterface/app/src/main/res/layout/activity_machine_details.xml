<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MachineDetailsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MachineDetailsActivity">

        <TextView
            android:id="@+id/textViewMachineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Name"
            android:textSize="24sp"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/textViewMachineDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/textViewMachineName"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/textViewMachineUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usage Instructions"
            android:layout_below="@id/textViewMachineDescription"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/textViewMachineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Status"
            android:layout_below="@id/textViewMachineUsage"
            android:layout_margin="16dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>